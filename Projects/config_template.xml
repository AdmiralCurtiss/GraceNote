			<File name="ExampleDatabase1" />
			<File name="ExampleDatabase2" />
			<File name="ExampleDatabase3" desc="ExampleDescription" />
		</Category>
		<Category name="Example Category 2">
			<File name="ExampleDatabase4" />
			<File name="ExampleDatabase5" />
			<File name="ExampleDatabase6" />
		</Category>
